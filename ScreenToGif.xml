<?xml version="1.0" ?>
<interface uri="http://0install.de/feeds/ScreenToGif.xml" xmlns="http://zero-install.sourceforge.net/2004/injector/interface" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://zero-install.sourceforge.net/2004/injector/interface http://0install.de/schema/injector/interface/interface.xsd http://0install.de/schema/desktop-integration/capabilities http://0install.de/schema/desktop-integration/capabilities/capabilities.xsd">
  <name>ScreenToGif</name>
  <summary>screen, webcam and sketchboard recorder, with integrated editor</summary>
  <description>This tool allows you to record a selected area of your screen, live feed from your webcam or live drawings from a sketchboard. Afterwards, you can edit and save the animation as a gif or video.</description>
  <icon href="https://raw.githubusercontent.com/NickeManarin/ScreenToGif/master/ScreenToGif/Resources/Logo.ico" type="image/vnd.microsoft.icon"/>
  <icon href="https://raw.githubusercontent.com/NickeManarin/ScreenToGif-Website/master/img/ms-icon-150x150.png" type="image/png"/>
  <category>Graphics</category>
  <homepage>https://www.screentogif.com/</homepage>

  <feed src="https://apps.0install.net/gui/screentogif.xml"/>
  <replaced-by interface="https://apps.0install.net/gui/screentogif.xml"/>

  <entry-point binary-name="ScreenToGif" command="run"/>

  <capabilities xmlns="http://0install.de/schema/desktop-integration/capabilities">
    <file-type id="ScreenToGif.Project">
      <description>ScreenToGif Project (.stg)</description>
      <verb args="&quot;%1&quot;" name="open"/>
      <extension value=".stg"/>
    </file-type>
  </capabilities>
</interface>
