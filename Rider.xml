<?xml version="1.0" encoding="utf-8"?>
<interface uri="http://0install.de/feeds/Rider.xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://zero-install.sourceforge.net/2004/injector/interface http://0install.de/schema/injector/interface/interface.xsd http://0install.de/schema/desktop-integration/capabilities http://0install.de/schema/desktop-integration/capabilities/capabilities.xsd" xmlns="http://zero-install.sourceforge.net/2004/injector/interface">
  <name>JetBrains Rider</name>
  <summary xml:lang="en">A cross-platform .NET IDE based on the IntelliJ platform and ReSharper</summary>
  <icon href="http://0install.de/feed-icons/Rider.ico" type="image/vnd.microsoft.icon" />
  <icon href="http://0install.de/feed-icons/Rider.png" type="image/png" />
  <homepage>http://www.jetbrains.com/rider/</homepage>
  <category>Development</category>
  <group>
    <environment name="IDE_HOME" insert="." />
    <environment name="PATH" insert="bin" />
    <environment name="CLASS_PATH" insert="lib/bootstrap.jar" />
    <environment name="CLASS_PATH" insert="lib/extensions.jar" />
    <environment name="CLASS_PATH" insert="lib/util.jar" />
    <environment name="CLASS_PATH" insert="lib/jdom.jar" />
    <environment name="CLASS_PATH" insert="lib/log4j.jar" />
    <environment name="CLASS_PATH" insert="lib/trove4j.jar" />
    <environment name="CLASS_PATH" insert="lib/jna.jar" />
    <environment name="CLASS_PATH" insert="jre/lib/tools.jar" />
    <environment name="IDEA_PLATFORM_PREFIX" value="Rider" />
    <command name="run">
      <runner interface="http://repo.roscidus.com/java/openjdk-jre" command="run-gui">
        <arg>-server</arg>
        <arg>-Xms128m</arg>
        <arg>-Xmx512m</arg>
        <arg>-XX:ReservedCodeCacheSize=240m</arg>
        <arg>-XX:+UseConcMarkSweepGC</arg>
        <arg>-XX:SoftRefLRUPolicyMSPerMB=50</arg>
        <arg>-ea</arg>
        <arg>-Dsun.io.useCanonCaches=false</arg>
        <arg>-Djava.net.preferIPv4Stack=true</arg>
        <arg>-XX:+HeapDumpOnOutOfMemoryError</arg>
        <arg>-XX:-OmitStackTraceInFastThrow</arg>
        <arg>-Xbootclasspath/a:$IDE_HOME/lib/boot.jar</arg>
        <arg>-Didea.paths.selector=$IDEA_PATHS_SELECTOR</arg>
        <arg>-Didea.platform.prefix=$IDEA_PLATFORM_PREFIX</arg>
        <arg>-cp</arg>
        <arg>$CLASS_PATH</arg>
        <arg>com.intellij.idea.Main</arg>
      </runner>
    </command>
    <implementation version="163.12057" stability="developer" id="sha1new=4f701ee96c93288b1f8345a5d0cc7e99f660d185">
      <environment name="IDEA_PATHS_SELECTOR" value="Rider10" />
      <manifest-digest sha1new="4f701ee96c93288b1f8345a5d0cc7e99f660d185" sha256="4b659c577f8febd9f665f4f7eff43d9c64c1c9d66330f71cd82cad7e3eba8fb1" sha256new="JNSZYV37R7V5T5TF6T3675B5TRSMDSOWMMYPOHGYFSWX4PV2R6YQ" />
      <archive href="https://download.jetbrains.com/resharper/riderRS-163.12057.zip" size="290860084" type="application/zip" />
    </implementation>
  </group>
  <entry-point command="run" binary-name="rider" />
  <capabilities xmlns="http://0install.de/schema/desktop-integration/capabilities">
    <file-type id="Rider.IntelliJIdeaProjectFile">
      <description xml:lang="en">IntelliJ IDEA Project File</description>
      <verb name="open" args="&quot;%1&quot;" />
      <extension value=".ipr" />
    </file-type>
    <file-type id="Rider.SlnFile">
      <description xml:lang="en">Visual Studio solution</description>
      <verb name="open" args="&quot;%1&quot;" />
      <extension value=".sln" mime-type="text/plain" />
    </file-type>
  </capabilities>
</interface>
