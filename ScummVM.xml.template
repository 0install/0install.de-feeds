  <homepage>http://www.scummvm.org/</homepage>
  <icon href="http://0install.de/feeds/images/ScummVM.png" type="image/png" />
  <feed-for interface="http://0install.de/feeds/ScummVM.xml" />
  <group license="GPL v2 (GNU General Public License)">
    <implementation arch="Windows-i486" version="{version}" released="{released}" stability="stable" main="scummvm.exe">
      <manifest-digest />
      <archive href="http://downloads.sourceforge.net/scummvm/scummvm/{version}/scummvm-{version}-win32.zip" type="application/zip" />
