<?xml version="1.0" ?>
<interface uri="http://0install.de/feeds/Pidgin.xml" xmlns="http://zero-install.sourceforge.net/2004/injector/interface" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://zero-install.sourceforge.net/2004/injector/interface http://0install.de/schema/injector/interface/interface.xsd http://0install.de/schema/desktop-integration/capabilities http://0install.de/schema/desktop-integration/capabilities/capabilities.xsd">
  <name>Pidgin</name>
  <summary xml:lang="en">multi-protocol instant messaging application</summary>
  <summary xml:lang="de">multi-protokoll Instant-Messenger Anwendung</summary>
  <description xml:lang="en">Pidgin is an instant messaging application that supports multiple protocols (AIM, MSN, ICQ, XMPP, YIM and others).</description>
  <description xml:lang="de">Pidgin ist eine Instant-Messenger Anwendung die mehrere Protokolle (AIM, MSN, ICQ, XMPP, YIM und andere) unterst√ºtzt.</description>
  <homepage>https://www.pidgin.im/</homepage>
  <category>Network</category>
  <icon href="https://raw.githubusercontent.com/0install/apps.0install.net/master/gui/pidgin.png" type="image/png"/>
  <icon href="https://raw.githubusercontent.com/0install/apps.0install.net/master/gui/pidgin.ico" type="image/vnd.microsoft.icon"/>

  <entry-point binary-name="pidgin" command="run"/>

  <feed src="https://apps.0install.net/gui/pidgin.xml"/>
  <replaced-by interface="https://apps.0install.net/gui/pidgin.xml"/>

  <capabilities xmlns="http://0install.de/schema/desktop-integration/capabilities">
    <url-protocol id="aim">
      <description xml:lang="en">URL:aim</description>
      <verb args="--protocolhandler=%1" name="Open"/>
    </url-protocol>
    <url-protocol id="msnim">
      <description xml:lang="en">URL:msnim</description>
      <verb args="--protocolhandler=%1" name="Open"/>
    </url-protocol>
    <url-protocol id="myim">
      <description xml:lang="en">URL:myim</description>
      <verb args="--protocolhandler=%1" name="Open"/>
    </url-protocol>
    <url-protocol id="xmpp">
      <description xml:lang="en">URL:xmpp</description>
      <verb args="--protocolhandler=%1" name="Open"/>
    </url-protocol>
    <url-protocol id="ymsgr">
      <description xml:lang="en">URL:ymsgr</description>
      <verb args="--protocolhandler=%1" name="Open"/>
    </url-protocol>
  </capabilities>
</interface>
